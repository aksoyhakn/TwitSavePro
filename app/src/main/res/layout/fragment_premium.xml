<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.aksoyhakn.twitter.ui.main.premium.PremiumViewModel" />

        <variable
            name="fragment"
            type="com.aksoyhakn.twitter.ui.main.premium.PremiumFragment" />

        <variable
            name="listener"
            type="com.aksoyhakn.twitter.ui.main.premium.adapter.PremiumAdapter.ListenerPremium" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRoot"
        onSafeClick="@{() -> fragment.clickHide()}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivClose"
            onSafeClick="@{() -> fragment.clickHide()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@drawable/ic_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tvDownloadTitle"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/tiktap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivClose" />

        <TextView
            android:id="@+id/tvNoAds"
            style="@style/StyleMediumText12_DarkGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:alpha="0.6"
            android:drawableStart="@drawable/ic_close"
            android:gravity="center"
            android:text="No Ads"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDownloadTitle" />


        <TextView
            android:id="@+id/tvNoUnlimited"
            style="@style/StyleMediumText12_DarkGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:alpha="0.6"
            android:drawableStart="@drawable/ic_close"
            android:gravity="center"
            android:text="Unlimited Access"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNoAds" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPremium"
            bind:setPremiumListener="@{listener}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintHorizontal_bias="0"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNoUnlimited"
            app:spanCount="3"
            bind:setPremiumData="@{viewModel.premiumList}" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TradeOnline" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@null</item>
    </style>


    <style name="LottieProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>


    <style name="TradeOnlineButton">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="state_collapsed">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/Widget.Design.BottomSheet.Modal</item>
    </style>

    <style name="BodyPrimaryCenter">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="FootlineDarkCenter">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/antrasit</item>
    </style>

    <style name="FootlineGreyCenter">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="StyleTitle">
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/antrasit</item>
    </style>

    <style name="StyleText14">
        <item name="android:fontFamily">@font/dm_sans_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/antrasit</item>
    </style>

    <style name="StyleMediumText14_Antrasit">
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/antrasit</item>
    </style>

    <style name="StyleMediumText12_Antrasit">
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/antrasit</item>
    </style>

    <style name="StyleMediumText14_DarkGrey">
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="StyleMediumText12_DarkGrey">
        <item name="android:fontFamily">@font/dm_sans_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/backgroundDarkColor</item>
    </style>

    <style name="StyleBoldText20">
        <item name="android:fontFamily">@font/dm_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/antrasit</item>
    </style>


    <style name="StyleBackgroundColor">
        <item name="android:background">@color/backgroundColor</item>
    </style>


    <style name="StyleBackgroundImage">
        <item name="android:background">@drawable/background_light</item>
    </style>

    <style name="StyleBottomBackground">
        <item name="android:background">@drawable/background_light</item>
    </style>

    <color name="lightBackgroundColor">@color/white</color>
    <color name="bottom_unselected_color">#7B7C86</color>
    <color name="bottom_selected_color">#25254B</color>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.aksoyhakn.twitter.ui.main.downloaad.tiktokModel.TikTokResponse" />

        <variable
            name="fragment"
            type="com.aksoyhakn.twitter.ui.main.downloaad.showTikTok.ShowtikTokBottomSheet" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llRoot"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <com.tistory.zladnrms.roundablelayout.RoundableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerLeftTop="20dp"
            app:cornerRightTop="20dp">

            <TextView
                android:id="@+id/tv_title"
                style="@style/StyleBoldText20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="14dp"
                android:background="@color/solitude"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <com.tistory.zladnrms.roundablelayout.RoundableLayout
                android:id="@+id/rlTikTok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view">

                <LinearLayout
                    android:id="@+id/llBody"
                    android:layout_width="match_parent"
                    android:padding="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/llVideo"
                        onSafeClick="@{() -> fragment.videoDownload(data,0)}"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/StyleMediumText12_Antrasit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:maxLines="2"
                                android:text="Video" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_download"/>

                        </LinearLayout>

                        <com.tistory.zladnrms.roundablelayout.RoundableLayout
                            android:id="@+id/rlImage"
                            android:layout_width="120dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            app:backgroundColor="@android:color/transparent"
                            app:cornerAll="10dp"
                            app:layout_constraintStart_toStartOf="parent">

                            <ImageView
                                android:id="@+id/ivTikTok"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                bind:setImageCache="@{data.itemInfo.itemStruct.video.originCover}" />

                        </com.tistory.zladnrms.roundablelayout.RoundableLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        onSafeClick="@{() -> fragment.videoDownload(data,1)}"
                        android:id="@+id/llMusic"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/StyleMediumText12_Antrasit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:maxLines="2"
                                android:text="Muzik" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_download"/>

                        </LinearLayout>

                        <com.tistory.zladnrms.roundablelayout.RoundableLayout
                            android:id="@+id/rlMusiscImage"
                            android:layout_width="120dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            app:backgroundColor="@android:color/transparent"
                            app:cornerAll="10dp"
                            app:layout_constraintStart_toStartOf="parent">

                            <ImageView
                                android:id="@+id/ivMusic"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:scaleType="fitXY"
                                bind:setImageCache="@{data.itemInfo.itemStruct.music.playUrl}" />

                        </com.tistory.zladnrms.roundablelayout.RoundableLayout>


                    </LinearLayout>

                </LinearLayout>


            </com.tistory.zladnrms.roundablelayout.RoundableLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:layout_constraintTop_toBottomOf="@+id/rv_short" />

        </com.tistory.zladnrms.roundablelayout.RoundableLayout>


    </LinearLayout>

</layout>